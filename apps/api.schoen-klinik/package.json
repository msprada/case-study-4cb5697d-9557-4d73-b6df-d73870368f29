  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "build": "pnpm run clean && tsc -p tsconfig.json",
    "start": "pnpm run build && node ./dist/app.js",
    "dev": "pnpm run clean && tsc -w & nodemon -q -w dist dist/app.js",
    "prisma:gen": "prisma generate --config ./src/plugins/database/prisma/prisma.config.ts",
    "prisma:db:push": "prisma db push --config ./src/plugins/database/prisma/prisma.config.ts",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,html}\""
  },
  "keywords": [],
  "author": "Marcel Sprada",
  "license": "ISC",
  "packageManager": "pnpm@10.17.0",
  "type": "module",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.3",
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "graphql": "^16.12.0",
    "mercurius": "^16.6.0",
    "mercurius-codegen": "^6.0.1",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "json-schema-to-ts": "^3.1.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.0",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "utils-prettier-config":"workspace:*"
  },
   "prettier": "utils-prettier-config"
